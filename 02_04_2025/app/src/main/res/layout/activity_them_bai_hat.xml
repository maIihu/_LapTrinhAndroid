<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemBaiHat">

    <EditText
        android:id="@+id/editTen"
        android:layout_width="226dp"
        android:layout_height="53dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTxtSinger"
        android:layout_width="235dp"
        android:layout_height="54dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="218dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTxtTime"
        android:layout_width="236dp"
        android:layout_height="79dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/editTxtSinger"
        app:layout_constraintTop_toBottomOf="@+id/editTxtSinger" />

    <Button
        android:id="@+id/btnThem"
        android:layout_width="107dp"
        android:layout_height="54dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="155dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTxtTime"
        app:layout_constraintStart_toStartOf="@+id/editTen" />
</androidx.constraintlayout.widget.ConstraintLayout>